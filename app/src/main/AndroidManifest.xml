<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.camg_apps.axfactor">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AxFactor">
        <activity
            android:name="com.camg_apps.axfactor.ui.menu.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.AxFactor.NoActionBar"
            android:screenOrientation="portrait" />

        <activity android:name="com.camg_apps.axfactor.ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>